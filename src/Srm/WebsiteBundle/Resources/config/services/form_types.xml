<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="srm_website.form.type.contact" class="Srm\WebsiteBundle\Form\Type\ContactType">
            <tag name="form.type" alias="srm_contact" />
        </service>
        <service id="srm_website.form.type.currency" class="Srm\WebsiteBundle\Form\Type\CurrencyType">
            <tag name="form.type" alias="srm_currency" />
        </service>
        <service id="srm_website.form.type.language" class="Srm\WebsiteBundle\Form\Type\LanguageType">
            <tag name="form.type" alias="srm_language" />
        </service>

        <service id="srm_website.form.type.address" class="Srm\WebsiteBundle\Form\Type\Address\AddressType">
            <tag name="form.type" alias="srm_address" />
        </service>
        <service id="srm_website.form.type.address_zip" class="Srm\WebsiteBundle\Form\Type\Address\ZipType">
            <argument type="service" id="srm_website.form.zip_listener" />
            <tag name="form.type" alias="srm_zip" />
        </service>
        <service id="srm_website.form.zip_listener" class="Srm\WebsiteBundle\Form\EventListener\ZipListener" public="false">
            <argument type="service">
                <service class="Doctrine\ORM\EntityRepository"
                    factory-service="doctrine.orm.entity_manager"
                    factory-method="getRepository"
                >
                    <argument>Srm\CoreBundle\Entity\Zip</argument>
                </service>
            </argument>
        </service>
        <service id="srm_website.form.type.address_city" class="Srm\WebsiteBundle\Form\Type\Address\CityType">
            <tag name="form.type" alias="srm_city" />
        </service>
        <service id="srm_website.form.type.address_country" class="Srm\WebsiteBundle\Form\Type\Address\CountryType">
            <tag name="form.type" alias="srm_country" />
        </service>

        <service id="srm_website.form.type.organisation_basic" class="Srm\WebsiteBundle\Form\Type\Organisation\BasicType">
            <tag name="form.type" alias="srm_organisation_basic" />
        </service>
        <service id="srm_website.form.type.organisation_legal" class="Srm\WebsiteBundle\Form\Type\Organisation\LegalType">
            <tag name="form.type" alias="srm_organisation_legal" />
        </service>

        <service id="srm_website.form.type.site" class="Srm\WebsiteBundle\Form\Type\Site\SiteType">
            <tag name="form.type" alias="srm_site" />
        </service>
        <service id="srm_website.form.type.site_type_site" class="Srm\WebsiteBundle\Form\Type\Site\TypeSiteType">
            <tag name="form.type" alias="srm_type_site" />
        </service>
        <service id="srm_website.form.type.site_activity" class="Srm\WebsiteBundle\Form\Type\Site\SiteActivityType">
            <tag name="form.type" alias="srm_site_activity" />
        </service>
        <service id="srm_website.form.type.site_sub_site_activity" class="Srm\WebsiteBundle\Form\Type\Site\SubSiteActivityType">
            <tag name="form.type" alias="srm_sub_site_activity" />
        </service>
        <service id="srm_website.form.type.site_dangerous_substance" class="Srm\WebsiteBundle\Form\Type\Site\DangerousSubstanceType">
            <tag name="form.type" alias="srm_dangerous_substance" />
        </service>
        <service id="srm_website.form.type.site_product" class="Srm\WebsiteBundle\Form\Type\Site\ProductType">
            <tag name="form.type" alias="srm_product" />
        </service>

        <service id="srm_website.form.type.department" class="Srm\WebsiteBundle\Form\Type\Department\DepartmentType">
            <tag name="form.type" alias="srm_department" />
        </service>
        <service id="srm_website.form.type.department_sub_department" class="Srm\WebsiteBundle\Form\Type\Department\SubDepartmentType">
            <tag name="form.type" alias="srm_sub_department" />
        </service>
        <service id="srm_website.form.type.department_site" class="Srm\WebsiteBundle\Form\Type\Department\SiteType">
            <call method="setRequest">
                <argument type="service" id="request" on-invalid="null" strict="false" />
            </call>
            <tag name="form.type" alias="srm_department_site" />
        </service>
    </services>
</container>

{% extends '@SrmWebsite/layout.html.twig' %}

{% block content %}
    <div>
        <table class="table table-hover table-condensed">
            <caption>
                <div class="text-left"><h3>{{ 'poles.list.title'|trans }}</h3></div>
                <div class="text-right">
                    <a href="{{ path('srm_website_poles_add', { 'organisationId': organisation.organisationId }) }}" class="btn" title="{{ 'button.add'|trans }}"><i class="icon-plus"></i> {{ 'button.add'|trans }}</a>
                </div>
            </caption>
            <thead>
                <tr>
                    <td>{{ 'poles.list.label'|trans }}</td>
                    <td>{{ 'poles.list.sites'|trans }}</td>
                    <td>{{ 'poles.list.departments'|trans }}</td>
                    <td>{{ 'list.enabled'|trans }}</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                {% for pole in poles %}
                    <tr>
                        <td>{{ pole.label }}</td>
                        <td>
                            {% if pole.sites %}
                                {{ pole.sites|joinLabels(', ') }}
                            {% else %}
                                {{ 'list.no_sites'|trans }}
                            {% endif %}
                        </td>
                        <td>
                            {% if pole.departments %}
                                {{ pole.departments|joinLabels(', ') }}
                            {% else %}
                                {{ 'list_no_departments'|trans }}
                            {% endif %}
                        </td>
                        <td>
                            {% if pole.enabled %}
                                {{ 'enabled'|trans }}
                            {% else %}
                                {{ 'disabled'|trans }}
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-toolbar">
                                <div class="btn-group">
                                    <a href="{{ path('srm_website_pole_show', { 'organisationId': organisation.organisationId, 'poleId': pole.poleId }) }}" class="btn" title="{{ 'button.show'|trans }}"><i class="icon-eye-open"></i></a>
                                    <a href="{{ path('srm_website_pole_edit', { 'organisationId': organisation.organisationId, 'poleId': pole.poleId }) }}" class="btn" title="{{ 'button.edit'|trans }}"><i class="icon-pencil"></i></a>
                                    <a href="{{ path('srm_website_pole_disable', { 'organisationId': organisation.organisationId, 'poleId': pole.poleId }) }}" class="btn btn-danger" title="{{ 'button.delete'|trans }}"><i class="icon-trash"></i></a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr class="info"><td colspan="8">{{ 'poles.list.empty'|trans }}</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

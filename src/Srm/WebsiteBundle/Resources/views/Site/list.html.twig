{% extends '@SrmWebsite/layout.html.twig' %}

{% block content %}
    <div>
        <table class="table table-hover">
            <caption>
                <div class="text-left"><h3>{{ 'sites.list.title'|trans }}</h3></div>
                <div class="text-right">
                    <a href="{{ path('srm_website_sites_add', { 'organisationId': organisation.organisationId }) }}" class="btn">{{ 'button.add'|trans }}</a>
                </div>
            </caption>
            <thead>
                <tr>
                    <td>{{ 'sites.list.name'|trans }}</td>
                    <td>{{ 'sites.list.organisation'|trans }}</td>
                    <td>{{ 'sites.list.type'|trans }}</td>
                    <td>{{ 'sites.list.activities'|trans }}</td>
                    <td>{{ 'sites.list.sub_activities'|trans }}</td>
                    <td>{{ 'address.label'|trans }}</td>
                    <td>{{ 'address.zip'|trans }}</td>
                    <td>{{ 'address.city'|trans }}</td>
                    <td>{{ 'address.country'|trans }}</td>
                    <td>{{ 'sites.list.enabled'|trans }}</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                {% for site in sites %}
                    <tr>
                        <td>{{ site.label }}</td>
                        <td>{{ site.organisation.label }}</td>
                        <td>{{ site.typeSite.label }}</td>
                        <td>
                            {% if site.siteActivities %}
                                {% set activitiesStr = [] %}
                                {% for activity in site.siteActivities %}
                                    {% set activitiesStr = activitiesStr|merge([activity.label]) %}
                                {% endfor %}
                                {{ activitiesStr|join(', ') }}
                            {% else %}
                                {{ 'sites.list.no_activities'|trans }}
                            {% endif %}
                        </td>
                        <td>
                            {% if site.subSiteActivities %}
                                {% set subActivitiesStr = [] %}
                                {% for subActivity in site.subSiteActivities %}
                                    {% set subActivitiesStr = subActivitiesStr|merge([subActivity.label]) %}
                                {% endfor %}
                                {{ subActivitiesStr|join(', ') }}
                            {% else %}
                                {{ 'sites.list.no_sub_activities'|trans }}
                            {% endif %}
                        </td>
                        <td>{{ site.address.label }}</td>
                        <td>{{ site.address.zip.code }}</td>
                        <td>{{ site.address.zip.city.label }}</td>
                        <td>{{ site.address.zip.city.country.label }}</td>
                        <td>
                            {% if site.enabled %}
                                {{ site.enabled }}
                            {% else %}
                                {{ site.disabled }}
                            {% endif %}
                        </td>
                        <td>
                            <a href="{{ path('srm_website_site_show', { 'organisationId': organisation.organisationId, 'siteId': site.siteId }) }}" class="btn">{{ 'button.show'|trans }}</a>
                            <a href="{{ path('srm_website_site_edit', { 'organisationId': organisation.organisationId, 'siteId': site.siteId }) }}" class="btn">{{ 'button.edit'|trans }}</a>
                            <a href="{{ path('srm_website_site_disable', { 'organisationId': organisation.organisationId, 'siteId': site.siteId }) }}" class="btn">{{ 'button.delete'|trans }}</a>
                        </td>
                    </tr>
                {% else %}
                    <tr><td colspan="11">{{ 'sites.list.empty'|trans }}</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

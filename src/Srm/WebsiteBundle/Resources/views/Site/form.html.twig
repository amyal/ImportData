{% extends '@SrmWebsite/layout.html.twig' %}

{% block content %}
    <div>
        {{ form_start(form) }}
            {{ form_errors(form) }}

            <ul class="unstyled">
                <li>
                    {{ form_widget(form.label) }}
                    {{ form_errors(form.label) }}
                </li>
                <li>
                    {{ form_widget(form.typeSite) }}
                    {{ form_errors(form.typeSite) }}
                </li>

                {{ include('SrmWebsiteBundle:Site:address.html.twig', { address: form.address }, with_context = false) }}

                <li>
                    <fieldset>
                        <legend>{{ 'sites.form.dangerous_substances'|trans }}</legend>
                        {{ form_widget(form.dangerousSubstances) }}
                        {{ form_errors(form.dangerousSubstances) }}
                    </fieldset>
                </li>
            </ul>

            <div class="control-group">
                <div class="controls">
                    {{ form_widget(form.save) }}
                </div>
            </div>

            {{ form_widget(form._token) }}
        </form>
    </div>

    <form action="{{ path('srm_website_sites_list', {'organisationId': organisationId}) }}">
        <button type="submit" class="btn">{{ 'navigation.button.cancel'|trans }}</button>
    </form>
{% endblock %}

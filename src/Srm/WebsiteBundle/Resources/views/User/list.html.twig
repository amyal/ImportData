{% extends '@SrmWebsite/layout.html.twig' %}

{% block content %}
    <div>
        <table class="table table-hover table-condensed">
            <caption>
                <div class="text-left"><h3>{{ 'users.list.title'|trans }}</h3></div>
                <div class="text-right">
                    <a href="{{ path('srm_website_users_add', { 'organisationId': organisation.organisationId }) }}" class="btn" title="{{ 'button.add'|trans }}"><i class="icon-plus"></i> {{ 'button.add'|trans }}</a>
                </div>
            </caption>
            <thead>
                <tr>
                    <td>{{ 'user.lastname'|trans }}</td>
                    <td>{{ 'user.firstname'|trans }}</td>
                    <td>{{ 'user.function'|trans }}</td>
                    <td>{{ 'address.city'|trans }}</td>
                    <td>{{ 'phone'|trans }}</td>
                    <td>{{ 'email'|trans }}</td>
                    <td>{{ 'role'|trans }}</td>
                    <td>{{ 'list.enabled'|trans }}</td>
                    <td></td>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.lastname }}</td>
                        <td>{{ user.firstname }}</td>
                        <td>{{ user.contactFunction }}</td>
                        <td>{{ user.address.city.label }}</td>
                        <td>{{ user.phone }}</td>
                        <td>{{ user.mail }}</td>
                        <td>{{ user.role.label }}</td>
                        <td>
                            {% if user.enabled %}
                                {{ 'enabled'|trans }}
                            {% else %}
                                {{ 'disabled'|trans }}
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-toolbar">
                                <div class="btn-group">
                                    <a href="{{ path('srm_website_user_show', { 'organisationId': organisation.organisationId, 'contactId': user.contactId }) }}" class="btn" title="{{ 'button.show'|trans }}"><i class="icon-eye-open"></i></a>
                                    <a href="{{ path('srm_website_user_edit', { 'organisationId': organisation.organisationId, 'contactId': user.contactId }) }}" class="btn" title="{{ 'button.edit'|trans }}"><i class="icon-pencil"></i></a>
                                    <a href="{{ path('srm_website_user_disable', { 'organisationId': organisation.organisationId, 'contactId': user.contactId }) }}" class="btn btn-danger" title="{{ 'button.delete'|trans }}"><i class="icon-trash"></i></a>
                                </div>
                            </div>
                        </td>
                    </tr>
                {% else %}
                    <tr class="info"><td colspan="9">{{ 'users.list.empty'|trans }}</td></tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

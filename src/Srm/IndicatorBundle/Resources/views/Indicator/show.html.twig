{% extends '::layout.html.twig' %}

{% block main_container_header %}
    <i class="icon-circle-blank"></i> {{ 'indicators.list.title'|trans }}
{% endblock %}

{% block breadcrumb %}
    <div class="breadcrumb-button">
        <span class="breadcrumb-label">{{ 'indicator.nav'|trans }}</span>
        <span class="breadcrumb-arrow"><span></span></span>
    </div>
    <div class="breadcrumb-button">
        <span class="breadcrumb-label">{{ 'indicators.list.control'|trans }}</span>
        <span class="breadcrumb-arrow"><span></span></span>
    </div>
{% endblock %}

{% block content %}
    <div class="container-fluid padded">
        <div class="row-fluid">
            <div class="span10 offset1">
                <div class="box">
                    <div class="box-header">
                        <span class="title">   </span>
                    </div>
                    <div class="box-content padded">
                        <div class="padded-box">
                            <div class="control-group">
                                <label class="control-label">{{ 'indicator.label'|trans }} :</label>
                                <div class="controls">{{ indicator.label }}</div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">{{ 'indicator.code'|trans }} :</label>
                                <div class="controls">{{ indicator.code }}</div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">{{ 'indicator.indicatorZone'|trans }} :</label>
                                <div class="controls">{{ indicator.indicatorZone.label }}</div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">{{ 'indicator.indicatorGraph'|trans }} :</label>
                                <div class="controls">{{ indicator.indicatorGraph.label }}</div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">{{ 'indicator.unitMeasurement'|trans }} :</label>
                                <div class="controls">{{ indicator.unitMeasurement.label }}</div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">{{ 'indicator.screenPeriod'|trans }} :</label>
                                <div class="controls">{{ indicator.screenPeriod.label }}</div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">{{ 'indicator.publicationDelay'|trans }} :</label>
                                <div class="controls">{{ indicator.publicationDelay.label }}</div>
                            </div>
                            <div class="control-group">
                                <label class="control-label">{{ 'indicator.publicationFrequency'|trans }} :</label>
                                <div class="controls">{{ indicator.publicationFrequency.label }}</div>
                            </div>
                        </div>
                    </div>

                    {{ include('SrmWebsiteBundle:Partials:_edit_cancel.html.twig', {
                        url_edit:   path('srm_indicator_indicator_edit',  {'organisationId': organisationId, 'indicatorId' : indicator.indicatorId}),
                        url_cancel: path('srm_indicator_indicator_list', {'organisationId': organisationId})
                    }, with_context = false) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
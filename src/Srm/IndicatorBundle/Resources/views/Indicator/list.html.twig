{% extends '::layout.html.twig' %}

{% block main_container_header %}
    <i class="icon-building"></i> {{ 'indicators.list.title'|trans }}
{% endblock %}

{% block breadcrumb %}
    <div class="breadcrumb-button">
        <span class="breadcrumb-label">{{ 'indicator.nav'|trans }}</span>
        <span class="breadcrumb-arrow"><span></span></span>
    </div>
    <div class="breadcrumb-button">
        <span class="breadcrumb-label">{{ 'indicator.nav.control'|trans }}</span>
        <span class="breadcrumb-arrow"><span></span></span>
    </div>
{% endblock %}

{% block content %}
    <div id="flash-messages">
        {% for flashMessage in app.session.flashbag.get('success_indicator') %}
            <div class="alert alert-success">
                <button class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage|trans|raw|nl2br }}
            </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('error_indicator') %}
            <div class="alert alert-error">
                <button class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage|trans|raw|nl2br }}
            </div>
        {% endfor %}

        {% for flashMessage in app.session.flashbag.get('info_indicator') %}
            <div class="alert alert-info">
                <button class="close" data-dismiss="alert">&times;</button>
                {{ flashMessage|trans|raw|nl2br }}
            </div>
        {% endfor %}
    </div>
    <div class="container-fluid padded">
        <div class="row-fluid">
            <div class="span12">
                <div class="box">
                    
                    <div class="box-content">
                        <table class="table table-normal">
                            <thead>
                                <tr><td>{{ 'indicators.list.name'|trans }}</td>
                                    <td>{{ 'indicators.list.referencial'|trans }}</td>
                                    <td>{{ 'indicators.list.diffusion'|trans }}</td>
                                    <td>{{ 'list.enabled'|trans }}</td>
                                    <td style="width:115px"></td>
                                </tr>
                            </thead>
                            <tbody>
                                {% for indicators in indicator %}
                                    <tr>
                                        <td>{{ indicators.label }}</td>
                                        <td>{{ indicators.referencials.label }}</td>
                                        <td>
                                            {% if indicators.referencials.toGroupStakeholder %}
                                                {{ indicators.referencials.toGroupStakeholder.label }}
                                            {% else %}
                                                {{ indicators.referencials.fromGroupStakeholder.label }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            {% if indicators.enabled %}
                                                {{ 'enabled'|trans }}
                                            {% else %}
                                                {{ 'disabled'|trans }}
                                            {% endif %}
                                        </td>
                                        <td>
                                            <div class="btn-group">
                                                <a href="{{ path('srm_indicator_indicator_show', { 'organisationId': organisation.organisationId, 'indicatorId': indicators.indicatorId }) }}" class="btn btn-default" title="{{ 'button.show'|trans }}"><i class="icon-eye-open"></i></a>
                                                <a href="{{ path('srm_indicator_indicator_edit', { 'organisationId': organisation.organisationId, 'indicatorId': indicators.indicatorId }) }}" class="btn btn-default" title="{{ 'button.edit'|trans }}"><i class="icon-pencil"></i></a>
                                                <a href="{{ path('srm_indicator_indicator_disable', { 'organisationId': organisation.organisationId, 'indicatorId': indicators.indicatorId }) }}" onclick="return confirm('{{ 'popup.disable'|trans}}')" class="btn btn-danger" title="{{ 'button.delete'|trans }}"><i class="icon-trash"></i></a>
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr class="info"><td colspan="9">{{ 'indicator.list.empty'|trans }}</td></tr>
                                {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

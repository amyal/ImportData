{% extends '::layout.html.twig' %}

{% block main_container_header %}
    <i class="icon-circle-blank"></i> {{ 'datas.list.title'|trans }}
{% endblock %}

{% block breadcrumb %}
    <div class="breadcrumb-button">
        <span class="breadcrumb-label">{{ 'configuration.nav'|trans }}</span>
        <span class="breadcrumb-arrow"><span></span></span>
    </div>
    <div class="breadcrumb-button">
        <span class="breadcrumb-label">{{ 'datas.list.title'|trans }}</span>
        <span class="breadcrumb-arrow"><span></span></span>
    </div>
{% endblock %}

{% block content %}
    <div class="container-fluid padded">
        <div class="row-fluid">
            <div class="span10 offset1">
                <div class="box">
                    <div class="box-header">
                        <span class="title">  {{ data.label }} </span>
                    </div>
                    <div class="box-content padded">
                        <div class="padded-box">
                            <div class="control-group">
                                <label class="control-label">{{ 'data.label'|trans }} :</label>
                                <div class="controls">{{ data.label }}</div>
                            </div>
                            
                            <div class="control-group">
                                <label class="control-label">{{ 'datas.list.organisationReferencials'|trans }}  : </label>
                                <div class="controls">
                                    {% if data.organisationReferencials %}{{ data.organisationReferencials|joinLabels(', ') }}{% else %}{{ 'list.no_organisationReferencials'|trans }}{% endif %}
                                </div>
                            </div>
                        </div>
                    </div>

                    {{ include('SrmWebsiteBundle:Partials:_edit_cancel.html.twig', {
                        url_edit:   path('srm_indicator_data_edit',  {'organisationId': organisationId, 'dataId': data.dataId}),
                        url_cancel: path('srm_indicator_data_list', {'organisationId': organisationId})
                    }, with_context = false) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
{% extends '::layout.html.twig' %}

{% block main_container_header %}
    <i class="icon-building"></i> {{ 'items.list.title'|trans }}
{% endblock %}

{% block breadcrumb %}
    <div class="breadcrumb-button">
        <span class="breadcrumb-label">{{ 'items.nav'|trans }}</span>
        <span class="breadcrumb-arrow"><span></span></span>
    </div>
    <div class="breadcrumb-button">
        <span class="breadcrumb-label">{{ 'items.nav.saisie'|trans }}</span>
        <span class="breadcrumb-arrow"><span></span></span>
    </div>
{% endblock %}

{% block content %}
    <div class="container-fluid padded">
        <div class="row-fluid">
            <div class="span12">
                <div class="box">
                    <div class="box-header">
                        <span class="title"> {{ 'items.list.title'|trans }} </span>
                    </div>
                    <div class="box-content">
                        <table class="table table-normal">
                            <thead>
                                <tr>
                                    <td>{{ 'items.list.label'|trans }}</td>
                                    <td>{{ 'items.list.question'|trans }}</td>
                                    {# <td>{{ 'items.list.code'|trans }}</td> #}
                                    <td style="width:115px"></td>
                                </tr>
                            </thead>
                            <tbody>
                                {% for item in items %}
                                    <tr>
                                        <td>{{ item.label }}</td>
                                        <td>{{ item.itemQuestions.description }}</td>
                                        {# <td>{{ item.referencials.code }}</td> #}
                                        {# <td>{{ item.code }}</td> #}
                                        {# <td>
                                            {% if item.enabled %}
                                                {{ 'enabled'|trans }}
                                            {% else %}
                                                {{ 'disabled'|trans }}
                                            {% endif %}
                                        </td> #}
                                        <td>
                                            <div class="btn-group">
                                                <a href="{{ path('srm_indicator_items_show', { 'organisationId': organisation.organisationId, 'itemId': item.itemId }) }}" class="btn btn-default" title="{{ 'button.show'|trans }}"><i class="icon-eye-open"></i></a>
                                                {% for indicator in item.indicators %}
                                                {% if indicator.unitMeasurement %}
                                                <a href="{{ path('srm_indicator_items_edit', { 'organisationId': organisation.organisationId, 'itemId': item.itemId, 'unitMeasurementId': indicator.unitMeasurement.unitMeasurementId }) }}" class="btn btn-default" title="{{ 'button.edit'|trans }}"><i class="icon-pencil"></i></a>
                                                {% endif %}{% endfor %}
                                            </div>
                                        </td>
                                    </tr>
                                {% else %}
                                    <tr class="info"><td colspan="9">{{ 'items.list.empty'|trans }}</td></tr>
                                {% endfor %}
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block srm_organisation_basic_widget %}
    {% spaceless %}
        <div>
            <form action="{{ path('srm_core_organisation_basic', {'organisationId': 42}) }}" method="POST" {{ form_enctype(form) }}>
                {{ form_errors(form) }}

                <ul>
                    <li>
                        {{  form_label(form.label) }} {{ form_widget(form.label) }}
                        {{ form_errors(form.label) }}
                    </li>
                    {{ block('srm_organisation_address_widget') }}
                    <li>
                        {% include 'SrmCoreBundle:Address:address.html.twig' with { 'address': form.address } %}
                    </li>
                    <li>
                        {{  form_label(form.identificationCode) }} {{ form_widget(form.identificationCode) }}
                        {{ form_errors(form.identificationCode) }}
                    </li>
                    <li>
                        {{  form_label(form.slogan1) }} {{ form_widget(form.slogan1) }}
                        {{ form_errors(form.slogan1) }}
                    </li>
                    <li>
                        {{  form_label(form.slogan2) }} {{ form_widget(form.slogan2) }}
                        {{ form_errors(form.slogan2) }}
                    </li>
                    <li>
                        {{  form_label(form.slogan3) }} {{ form_widget(form.slogan3) }}
                        {{ form_errors(form.slogan3) }}
                    </li>
                    <li>
                        {{  form_label(form.logo) }} {{ form_widget(form.logo) }}
                        {{ form_errors(form.logo) }}
                    </li>
                </ul>
            </form>
        </div>
    {% endspaceless %}
{% endblock %}

{% block srm_organisation_address_widget %}
    <li>
        {{ form_widget(address.name) }}
        {{ form_errors(address.name) }}
    </li>
    {{ block('srm_zip_widget') }}
    <li>
        {% include 'SrmCoreBundle:Address:zip.html.twig' with { 'zip': address.zip } %}
    </li>
{% endblock %}

{% block srm_zip_widget %}
    <li>
        {{ form_widget(zip.code) }}
        {{ form_errors(zip.code) }}
    </li>
    {{ block('srm_city_widget') }}
    <li>
        {% include 'SrmCoreBundle:Address:city.html.twig' with { 'city': zip.city } %}
    </li>
{% endblock %}

{% block srm_city_widget %}
    <li>
        {{ form_widget(city.name) }}
        {{ form_errors(city.name) }}
    </li>
    {{ block('srm_country_widget') }}
    <li>
        {% include 'SrmCoreBundle:Address:country.html.twig' with { 'country': city.country } %}
    </li>
{% endblock %}

{% block srm_country_widget %}
    <li>
        {{ form_widget(country) }}
        {{ form_errors(country) }}
    </li>
{% endblock %}

{% extends "SrmCoreBundle::layout.html.twig" %}

{% block content %}
    <div>
        <form method="POST" action="{{ path('srm_core_organisation_basic') }}">
            {{ form_errors(form) }}

            <ul>
                <li>
                    <label>{{ form_label(form.label)|trans }} {{ form_widget(form.label) }}</label>
                    {{ form_errors(form.label) }}
                </li>
                <li>
                    {% include 'SrmCoreBundle:Address:address.html.twig' with { 'address': form.address } %}
                </li>
                <li>
                    <label>{{ form_label(form.identificationCode)|trans }} {{ form_widget(form.identificationCode) }}</label>
                    {{ form_errors(form.identificationCode) }}
                </li>
                <li>
                    <label>{{ form_label(form.slogan1)|trans }} {{ form_widget(form.slogan1) }}</label>
                    {{ form_errors(form.slogan1) }}
                </li>
                <li>
                    <label>{{ form_label(form.slogan2)|trans }} {{ form_widget(form.slogan2) }}</label>
                    {{ form_errors(form.slogan2) }}
                </li>
                <li>
                    <label>{{ form_label(form.slogan3)|trans }} {{ form_widget(form.slogan3) }}</label>
                    {{ form_errors(form.slogan3) }}
                </li>
                <li>
                    <label>{{ form_label(form.logo)|trans }} {{ form_widget(form.logo) }}</label>
                    {{ form_errors(form.logo) }}
                </li>
            </ul>
        </form>
    </div>
{% endblock %}

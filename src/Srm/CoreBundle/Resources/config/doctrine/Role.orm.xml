<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Srm\CoreBundle\Entity\Role" table="v_role">
    <id name="roleId" type="integer" column="ROLE_ID">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="label" type="string" column="LABEL" length="50" nullable="false"/>
    <field name="enabled" type="boolean" column="ENABLED" nullable="true"/>
    <field name="deleted" type="boolean" column="DELETED" nullable="true"/>
    <many-to-many field="affiliation" target-entity="Affiliation" inversed-by="role">
      <join-table name="vj_affiliation_role">
        <join-columns>
          <join-column name="ROLE_ID" referenced-column-name="ROLE_ID"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="AFFILIATION_ID" referenced-column-name="AFFILIATION_ID"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>

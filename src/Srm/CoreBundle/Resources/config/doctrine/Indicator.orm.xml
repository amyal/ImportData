<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Srm\CoreBundle\Entity\Indicator" table="V_INDICATOR">
    <id name="indicatorId" type="integer" column="INDICATOR_ID">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="NAME" length="255" nullable="false"/>
    <field name="referenceCode" type="string" column="REFERENCE_CODE" length="255" nullable="true"/>
    <field name="label" type="string" column="LABEL" length="255" nullable="true"/>
    <field name="enabled" type="boolean" column="ENABLED" nullable="true"/>
    <field name="deleted" type="boolean" column="DELETED" nullable="true"/>
    <many-to-many field="item" target-entity="Item" inversed-by="indicator">
      <join-table name="vj_indicator_item">
        <join-columns>
          <join-column name="INDICATOR_ID" referenced-column-name="INDICATOR_ID"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="ITEM_ID" referenced-column-name="ITEM_ID"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
  </entity>
</doctrine-mapping>

<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Srm\CoreBundle\Entity\Department" table="VR_DEPARTMENT">
    <id name="departmentId" type="integer" column="DEPARTMENT_ID">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="name" type="string" column="NAME" length="100" nullable="false"/>
    <field name="description" type="string" column="DESCRIPTION" length="500" nullable="false"/>
    <field name="enabled" type="boolean" column="ENABLED" nullable="true"/>
    <field name="deleted" type="boolean" column="DELETED" nullable="true"/>
    <field name="creationDate" type="datetime" column="CREATION_DATE" nullable="false"/>
    <field name="modificationDate" type="datetime" column="MODIFICATION_DATE" nullable="true"/>
    <field name="category" type="string" column="CATEGORY" length="25" nullable="false"/>
    <many-to-many field="site" target-entity="Site" mapped-by="department"/>
    <many-to-many field="contact" target-entity="Contact" mapped-by="department"/>
  </entity>
</doctrine-mapping>

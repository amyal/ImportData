<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Srm\CoreBundle\Entity\Site" table="V_SITE" repository-class="Srm\CoreBundle\Entity\Repository\SiteRepository">
    <id name="siteId" type="integer" column="SITE_ID">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="label" type="string" column="LABEL" length="50" nullable="false"/>
    <field name="phone" type="string" column="PHONE" length="20" nullable="true"/>
    <field name="mail" type="string" column="MAIL" length="150" nullable="true"/>
    <field name="fax" type="string" column="FAX" length="20" nullable="true"/>
    <field name="importance" type="string" column="IMPORTANCE" length="50" nullable="true"/>
    <field name="map" type="string" column="MAP" length="255" nullable="true"/>
    <field name="creationDate" type="datetime" column="CREATION_DATE" nullable="true"/>
    <field name="modificationDate" type="datetime" column="MODIFICATION_DATE" nullable="true"/>
    <field name="enabled" type="boolean" column="ENABLED" nullable="true"/>
    <field name="deleted" type="boolean" column="DELETED" nullable="true"/>
    <many-to-one field="language" target-entity="Language">
      <join-columns>
        <join-column name="LANGUAGE_ID" referenced-column-name="LANGUAGE_ID"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="typeSite" target-entity="TypeSite">
      <join-columns>
        <join-column name="TYPE_SITE_ID" referenced-column-name="TYPE_SITE_ID"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="currency" target-entity="Currency">
      <join-columns>
        <join-column name="CURRENCY_ID" referenced-column-name="CURRENCY_ID"/>
      </join-columns>
    </many-to-one>
    <many-to-one field="address" target-entity="Address">
      <join-columns>
        <join-column name="ADDRESS_ID" referenced-column-name="ADDRESS_ID"/>
      </join-columns>

      <cascade>
        <cascade-all />
      </cascade>
    </many-to-one>
    <many-to-one field="organisation" target-entity="Organisation">
      <join-columns>
        <join-column name="ORGANISATION_ID" referenced-column-name="ORGANISATION_ID"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="subDepartment" target-entity="SubDepartment" inversed-by="site">
      <join-table name="vj_site_sub_department">
        <join-columns>
          <join-column name="SITE_ID" referenced-column-name="SITE_ID"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="SUB_DEPARTMENT_ID" referenced-column-name="SUB_DEPARTMENT_ID"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="subSiteActivities" target-entity="SubSiteActivity" inversed-by="site">
      <join-table name="vj_site_sub_activity">
        <join-columns>
          <join-column name="SITE_ID" referenced-column-name="SITE_ID"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="SUB_SITE_ACTIVITY_ID" referenced-column-name="SUB_SITE_ACTIVITY_ID"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="contacts" target-entity="Contact" inversed-by="site">
      <join-table name="vj_site_contact">
        <join-columns>
          <join-column name="SITE_ID" referenced-column-name="SITE_ID"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="CONTACT_ID" referenced-column-name="CONTACT_ID"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="dangerousSubstances" target-entity="DangerousSubstance" inversed-by="site">
      <join-table name="vj_site_dangerous_substance">
        <join-columns>
          <join-column name="SITE_ID" referenced-column-name="SITE_ID"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="DANGEROUS_SUBSTANCE_ID" referenced-column-name="DANGEROUS_SUBSTANCE_ID"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="departments" target-entity="Department" inversed-by="sites">
      <join-table name="vj_site_department">
        <join-columns>
          <join-column name="SITE_ID" referenced-column-name="SITE_ID"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="DEPARTMENT_ID" referenced-column-name="DEPARTMENT_ID"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="pole" target-entity="Pole" inversed-by="site">
      <join-table name="vj_site_pole">
        <join-columns>
          <join-column name="SITE_ID" referenced-column-name="SITE_ID"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="POLE_ID" referenced-column-name="POLE_ID"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>
    <many-to-many field="siteActivities" target-entity="SiteActivity" inversed-by="site">
      <join-table name="vj_site_activity">
        <join-columns>
          <join-column name="SITE_ID" referenced-column-name="SITE_ID"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="SITE_ACTIVITY_ID" referenced-column-name="SITE_ACTIVITY_ID"/>
        </inverse-join-columns>
      </join-table>
    </many-to-many>

    <lifecycle-callbacks>
      <lifecycle-callback type="preUpdate" method="updateModificationDate" />
    </lifecycle-callbacks>
  </entity>
</doctrine-mapping>

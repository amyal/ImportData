          <join-column name="REFERENCIAL_ID" referenced-column-name="REFERENCIAL_ID"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="INDICATORS_ID" referenced-column-name="INDICATORS_ID"/>
        </inverse-join-columns>
      </join-table>

      <cascade>
        <cascade-all />
      </cascade>
    </many-to-many>-->

  </entity>
</doctrine-mapping>
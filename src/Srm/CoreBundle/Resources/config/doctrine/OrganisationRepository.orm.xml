<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Srm\CoreBundle\Entity\OrganisationRepository" table="v_organisation_repository" repository-class="Srm\CoreBundle\Repository\OrganisationRepositoryRepository">
    <id name="organisationRepositoryId" type="integer" column="ORGANISATION_REPOSITORY_ID">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="label" type="string" column="LABEL" length="50" nullable="false"/>
    <field name="creationDate" type="datetime" column="CREATION_DATE" nullable="true"/>
    <field name="modificationDate" type="datetime" column="MODIFICATION_DATE" nullable="true"/>
    <field name="enabled" type="boolean" column="ENABLED" nullable="true"/>
    <field name="deleted" type="boolean" column="DELETED" nullable="true"/>
    <many-to-many field="indicator" target-entity="Indicator" inversed-by="organisationRepository">
      <join-table name="vj_repositories_indicators">
        <join-columns>
          <join-column name="ORGANISATION_REPOSITORY_ID" referenced-column-name="ORGANISATION_REPOSITORY_ID"/>
        </join-columns>
        <inverse-join-columns>
          <join-column name="INDICATORS_ID" referenced-column-name="INDICATORS_ID"/>
        </inverse-join-columns>
      </join-table>

      <cascade>
        <cascade-all />
      </cascade>
    </many-to-many>
  </entity>
</doctrine-mapping>

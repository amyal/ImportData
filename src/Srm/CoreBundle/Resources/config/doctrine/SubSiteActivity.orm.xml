<?xml version="1.0" encoding="utf-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
  <entity name="Srm\CoreBundle\Entity\SubSiteActivity" table="VR_SUB_SITE_ACTIVITY" repository-class="Srm\CoreBundle\Entity\Repository\SubSiteActivityRepository">
    <id name="subSiteActivityId" type="integer" column="SUB_SITE_ACTIVITY_ID">
      <generator strategy="IDENTITY"/>
    </id>
    <field name="label" type="string" column="LABEL" length="200" nullable="true"/>
    <many-to-one field="siteActivity" target-entity="SiteActivity">
      <join-columns>
        <join-column name="SITE_ACTIVITY_ID" referenced-column-name="SITE_ACTIVITY_ID"/>
      </join-columns>
    </many-to-one>
    <many-to-many field="sites" target-entity="Site" mapped-by="subSiteActivities"/>
  </entity>
</doctrine-mapping>

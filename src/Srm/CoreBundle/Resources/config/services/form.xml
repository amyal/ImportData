        <parameter key="srm_core.form.type.organisation.basic.address.class">Srm\CoreBundle\Form\Type\OrganisationAddressType</parameter>
        <parameter key="srm_core.form.type.address.zip.class">Srm\CoreBundle\Form\Type\AddressZipType</parameter>

        <parameter key="srm_core.form.type.organisation.legal.class">Srm\CoreBundle\Form\Type\OrganisationLegalType</parameter>

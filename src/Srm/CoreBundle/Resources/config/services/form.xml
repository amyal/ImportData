<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <parameters>
        <parameter key="srm_core.form.type.organisation.basic.class">Srm\CoreBundle\Form\Type\OrganisationBasicType</parameter>
        <parameter key="srm_core.form.type.organisation.address.class">Srm\CoreBundle\Form\Type\OrganisationAddressType</parameter>
        <parameter key="srm_core.form.type.zip.class">Srm\CoreBundle\Form\Type\ZipType</parameter>
        <parameter key="srm_core.form.type.city.class">Srm\CoreBundle\Form\Type\CityType</parameter>
        <parameter key="srm_core.form.type.country.class">Srm\CoreBundle\Form\Type\CountryType</parameter>
    </parameters>

    <services>
        <service id="srm_core.form.type.organisation_basic" class="%srm_core.form.type.organisation.basic.class%">
            <tag name="form.type" alias="srm_organisation_basic" />
        </service>
        <service id="srm_core.form.type.organisation_address" class="%srm_core.form.type.organisation.address.class%">
            <tag name="form.type" alias="srm_organisation_address" />
        </service>
        <service id="srm_core.form.type.zip" class="%srm_core.form.type.zip.class%">
            <tag name="form.type" alias="srm_zip" />
        </service>
        <service id="srm_core.form.type.city" class="%srm_core.form.type.city.class%">
            <tag name="form.type" alias="srm_city" />
        </service>
        <service id="srm_core.form.type.country" class="%srm_core.form.type.country.class%">
            <tag name="form.type" alias="srm_country" />
        </service>
    </services>
</container>
